<Page x:Class="SapLinksUtility2.SettingsToolPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SapLinksUtility2"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingsToolPage">
    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource ToolTitleTextBlockStyle}">Settings Tool</TextBlock>
            <Button Style="{StaticResource ToolsButtonStyle}">
                <TextBlock Style="{StaticResource ToolButtonTextBlockStyle}">Maintain Settings</TextBlock>
            </Button>
            <Button Style="{StaticResource ToolsButtonStyle}">
                <TextBlock Style="{StaticResource ToolButtonTextBlockStyle}">Export Settings</TextBlock>
            </Button>
            <Button Style="{StaticResource ToolsButtonStyle}">
                <TextBlock Style="{StaticResource ToolButtonTextBlockStyle}">Import Settings</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>