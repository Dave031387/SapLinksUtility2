<Page x:Class="SapLinksUtility2.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SapLinksUtility2"
      mc:Ignorable="d" 
      d:DesignHeight="482.4" d:DesignWidth="800"
      Title="WelcomePage" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">

    <Grid>
        <DockPanel x:Name="WelcomePage1">
            <TextBlock Style="{DynamicResource ToolTitleTextBlockStyle}" DockPanel.Dock="Top">
                Welcome to the SAP Links Utility
            </TextBlock>
            <TextBlock TextAlignment="Center" Foreground="{StaticResource MediumGreenBrush}" DockPanel.Dock="Top">
                Design and code by David R Slocum
            </TextBlock>
            <TextBlock TextAlignment="Center" Foreground="{StaticResource LightGreenBrush}" Background="{StaticResource BlackBrush}"
                       Padding="0,10" Margin="0,0,30,0" DockPanel.Dock="Bottom" Height="47">
                Copyright © 2018 - Consumers Energy
            </TextBlock>
            <Image Source="Resources/CELOGO.PNG" ScrollViewer.CanContentScroll="True" Margin="20"/>
        </DockPanel>
    </Grid>
</Page>